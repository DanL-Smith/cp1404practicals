BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_miles
            text: "34"
            font_size: 48
            on_text: app.handle_calculate()
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: None
            width: 100
            Button:
                id: up_button
                text: "Up"
                on_press: app.handle_increment(+1)
            Button:
                id: down_button
                text: "Down"
                on_press: app.handle_increment(-1)
